{
  "app-id": "de.zray.Facetracker",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "facetracker-gui",
  "finish-args": [
    "--share=network",
    "--socket=fallback-x11",
    "--device=all",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "facetracker",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    },
    {
      "name": "OpenSeeFace",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/facetracker",
        "echo $PWD",
        "cp -r facetracker/osf /app/share/facetracker",
        "chmod +x /app/share/facetracker/osf/facetracker"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}