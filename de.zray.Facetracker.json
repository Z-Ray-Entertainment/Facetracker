{
  "app-id": "de.zray.Facetracker",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "facetracker-gui",
  "finish-args": [
    "--share=network",
    "--socket=fallback-x11",
    "--device=all",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "facetracker",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/Z-Ray-Entertainment/Facetracker",
          "tag": "24.7a1"
        }
      ]
    },
    {
      "name": "OpenSeeFace",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/facetracker/osf/",
        "cp -r ./ /app/share/facetracker/osf/",
        "chmod +x /app/share/facetracker/osf/facetracker"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Z-Ray-Entertainment/Facetracker/releases/download/24.7a1/osf_pre_build.zip",
          "sha256": "98cda3bc8bd275edc630d83e687e098460d3bd857155069beef1cd24a74287c3"
        }
      ]
    }
  ]
}