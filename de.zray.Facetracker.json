{
  "app-id": "de.zray.Facetracker",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "facetracker-gui",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=all",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "facetracker-addional-files",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/applications",
        "install -D de.zray.Facetracker.desktop /app/share/applications/",

        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "install -D facetracker/data/icons/de.zray.Facetracker.svg /app/share/icons/hicolor/scalable/apps",

        "install -Dp -m 644 de.zray.Facetracker.metainfo.xml /app/share/metainfo/de.zray.Facetracker.metainfo.xml"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/Z-Ray-Entertainment/Facetracker",
          "tag": "24.7a3"
        }
      ]
    },
    {
      "name": "OpenSeeFace",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/facetracker/osf/",
        "cp -r ./ /app/share/facetracker/osf/",
        "chmod +x /app/share/facetracker/osf/facetracker"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Z-Ray-Entertainment/Facetracker/releases/download/24.7a3/osf_pre_build.zip",
          "sha256": "98cda3bc8bd275edc630d83e687e098460d3bd857155069beef1cd24a74287c3"
        }
      ]
    },
    {
      "name": "facetracker",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/Z-Ray-Entertainment/Facetracker",
          "tag": "24.7a3"
        }
      ]
    }
  ]
}